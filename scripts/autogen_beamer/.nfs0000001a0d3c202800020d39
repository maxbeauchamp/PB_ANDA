\section{OSSE avec erreurs d'observations}
\frame{\tableofcontents[currentsection]}

\subsection{NRMSE et agrégation des données nadir}

\begin{frame}[allowframebreaks]
\frametitle{Scores AnDA et aggrégation nadir}

\begin{figure}[H]
  \centering
  \zoombox{\includegraphics[width=7cm]{/home/user/Bureau/CDD_IMT-A/Meeting_20202801/figs/RES_OBS_NOCONT/compare_AnDA_nadlag_obs/TS_AnDA_nadir_nadlag.png}}
  \caption{NRMSE journalière à partir des données nadir en fonction du pas d'agrégation D$\pm k$, $k=0,\cdots,5$}
\end{figure} 

\begin{itemize}
\item Ajout d'une variance d'erreur d'environ 30cm$^2$
\item Contrairement aux données synthétiques modèles, l'ajout de données nadir sur une fenêtre temporelle D$\pm k$, $k>0$ améliore les scores 
\item La meilleure performance est obtenue avec $k=4/5$, ce qui est cohérent avec les travaux de \citep{lopez-radcenco_analog_2019}
\end{itemize}

\begin{figure}[H]
  \centering
  \zoombox{\includegraphics[width=7cm]{/home/user/Bureau/CDD_IMT-A/Meeting_20202801/figs/RES_OBS_NOCONT/compare_AnDA_nadlag_obs/TS_AnDA_nadirswot_nadlag.png}}
  \caption{NRMSE journalière à partir des données fusionnées nadir/swot en fonction du pas d'agrégation D$\pm k$, $k=0,\cdots,5$}
\end{figure} 

\end{frame}

\subsection{NRMSE et couverture spatiale des données journalières}

\begin{frame}[allowframebreaks]
\frametitle{Scores OI/AnDA/VE-DINEOF}

\begin{figure}[H]
  \centering
  \zoombox{\includegraphics[width=7cm]{/home/user/Bureau/CDD_IMT-A/Meeting_20202801/figs/RES_OBS_NOCONT/scores_AnDA_nadlag_5_obs/TS_AnDA_nRMSE.png}}
  \caption{NRMSE journalière à partir des données nadir, swot et de leur fusion (voir les diagrammes en bâtons pour la couverture spatiale associée), pour les méthodes VE-DINEOF et Post-AnDA, en comparaison de l'OI avec 4 nadir (source CLS).}
\end{figure} 

\begin{itemize}
\item Résultats non satisfaisants : OSSE à revoir
\end{itemize}

\end{frame}

